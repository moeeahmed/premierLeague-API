extends base

block content
    p Hi #{name},
    p Forgot your password? 
    p
        | This is your reset token. (
        strong It will only be valid for 10 minutes
        | )

    h3 #{token}

    table.btn.btn-grey(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset your password
    p If you didn't forget your password, please ignore this email!
